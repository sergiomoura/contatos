{
  "openapi": "3.0.0",
  "info": {
    "title": "Gerenciamento de Contatos",
    "description": "API de Gerenciamento de Contatos para estudo e realização de desenvolvimento de frontend",
    "version": "1.0.0",
    "contact": {
      "name": "Sérgio Moura",
      "url": "https://github.com/sergiomoura"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "servers": [
    {
      "url": "https://contatos-api.fly.dev/api/v1"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "operationId": "registerUser",
        "tags": ["Usuário"],
        "security": [],
        "summary": "Registrar um novo usuário",
        "description": "Cria um novo usuário na aplicação",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário registrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        }
                      }
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos para criação de usuário"
          },
          "409": {
            "description": "Usuário já cadastrado"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Autenticar um usuário",
        "operationId": "login",
        "tags": ["Usuário"],
        "description": "Autentica um usuário existente na aplicação",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário autenticado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        }
                      }
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas"
          }
        }
      }
    },
    "/profile": {
      "put": {
        "operationId": "updateUser",
        "tags": ["Usuário"],
        "security": [],
        "summary": "Atualizar dados de usuário",
        "description": "Atualizar dados de um usuário existente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário alterado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos para alteração de usuário"
          },
          "409": {
            "description": "Email já cadastrado"
          }
        }
      }
    },
    "/contacts": {
      "get": {
        "summary": "Listar contatos",
        "description": "Lista contatos do usuário logado",
        "operationId": "listContacts",
        "tags": ["Contato"],
        "responses": {
          "200": {
            "description": "Lista de contatos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "emails": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string"
                            },
                            "address": {
                              "type": "string"
                            }
                          }
                        }
                      },
                      "phoneNumbers": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string"
                            },
                            "number": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Adicionar contato",
        "description": "Adicionar contato ao usuário logado",
        "operationId": "addContact",
        "tags": ["Contato"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "emails": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "phoneNumbers": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "name"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Adicionado um contato",
            "content": {
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "id":{"type":"string"},
                    "name":{"type":"string"},
                    "emails":{
                      "type": "array",
                      "items":{
                        "type": "object",
                        "properties": {
                          "id":{"type":"string"},
                          "address":{"type": "string"}
                        }
                      }
                    },
                    "phoneNumbers":{
                      "type": "array",
                      "items":{
                        "type": "object",
                        "properties": {
                          "id":{"type":"string"},
                          "number":{"type": "string"}
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos para criação de contato"
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "delete": {
        "summary": "Remover um contato",
        "operationId": "deleteContact",
        "tags": ["Contato"],
        "description": "Remove um contato existente na aplicação",
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "ID do contato a ser removido",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Contato removido com sucesso"
          },
          "404": {
            "description": "Contato não encontrado"
          }
        }
      }
    }
  }
}