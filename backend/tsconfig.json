{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": false,
      "allowJs": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@/*":["./src/*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "tests/**/*.ts"
    ]
}
  